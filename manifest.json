{
  "manifest_version": 3,
  "name": "Weather Extension",
  "version": "1.0",
  "description": "Get the current weather information for selected cities.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab"]
}
